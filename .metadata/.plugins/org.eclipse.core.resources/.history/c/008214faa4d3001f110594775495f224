    <script>
document.addEventListener('DOMContentLoaded', function() {
    // 내용을 담고 있는 컨테이너를 찾습니다
    const contentContainer = document.getElementById('content-container');
    
    // iframe을 직접 찾습니다 (innerHTML을 파싱하지 않고)
    const iframes = contentContainer.getElementsByTagName('iframe');
    
    // NodeList를 배열로 변환하여 처리
    Array.from(iframes).forEach(iframe => {
        const iframeSrc = iframe.getAttribute('src');  // src 속성 직접 가져오기
        
        // 모달 컨테이너 생성
        const modalContainer = document.createElement('div');
        modalContainer.className = 'modal-container';
        
        // 모달 컨텐츠 생성
        const modalContent = document.createElement('div');
        modalContent.className = 'modal-content';
        
        // 닫기 버튼 추가
        const closeBtn = document.createElement('span');
        closeBtn.innerHTML = '&times;';
        closeBtn.className = 'close-btn';
        closeBtn.onclick = function() {
            modalContainer.style.display = 'none';
        };
        
        // 새로운 iframe 생성
        const modalIframe = document.createElement('iframe');
        modalIframe.src = iframeSrc;
        modalIframe.className = 'modal-iframe';
        
        // 모달 조립
        modalContent.appendChild(closeBtn);
        modalContent.appendChild(modalIframe);
        modalContainer.appendChild(modalContent);
        document.body.appendChild(modalContainer);
        
        // iframe을 버튼으로 교체
        const button = document.createElement('button');
        button.textContent = '페이지 보기';
        button.className = 'btn btn-info';
        button.onclick = function() {
            modalContainer.style.display = 'block';
        };
        
        // 원래 iframe을 버튼으로 교체
        iframe.parentNode.replaceChild(button, iframe);
        
        // 모달 외부 클릭시 닫기
        modalContainer.onclick = function(e) {
            if (e.target === modalContainer) {
                modalContainer.style.display = 'none';
            }
        };
    });
});
</script>
</body>
